@model ClothesShop.Models.CheckoutViewModel

<form asp-action="PlaceOrder" method="post">
    @Html.AntiForgeryToken()

    <div class="container-fluid">
        <div class="row px-xl-5">

            <!-- LEFT: BILLING -->
            <div class="col-lg-8">
                <h5 class="section-title position-relative text-uppercase mb-3">
                    <span class="bg-secondary pr-3">Billing Address</span>
                </h5>
                <div class="bg-light p-30 mb-5">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label>First Name</label>
                            <input asp-for="User.FirstName" class="form-control" readonly />
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Last Name</label>
                            <input asp-for="User.LastName" class="form-control" readonly />
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Email</label>
                            <input asp-for="User.Email" class="form-control" readonly />
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Phone</label>
                            <input asp-for="User.PhoneNumber" class="form-control" readonly />
                        </div>

                        <div class="col-md-6 form-group">
                            <label>Street</label>
                            <input asp-for="Address.Street" class="form-control" readonly />
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Ward</label>
                            <input asp-for="Address.Ward" class="form-control" readonly />
                        </div>
                        <div class="col-md-6 form-group">
                            <label>District</label>
                            <input asp-for="Address.District" class="form-control" readonly />
                        </div>
                        <div class="col-md-6 form-group">
                            <label>City</label>
                            <input asp-for="Address.City" class="form-control" readonly />
                        </div>

                        <a href="/Address" class="btn btn-outline-primary btn-sm mt-3">
                            Quản lý sổ địa chỉ
                        </a>
                    </div>
                </div>
            </div>

            <!-- RIGHT: ORDER TOTAL -->
            <div class="col-lg-4">
                <h5 class="section-title position-relative text-uppercase mb-3">
                    <span class="bg-secondary pr-3">Order Total</span>
                </h5>

                <div class="bg-light p-30 mb-5">
                    <div class="border-bottom">
                        <h6 class="mb-3">Products</h6>
                        @if (Model.Cart?.Items != null && Model.Cart.Items.Any())
                        {
                            foreach (var item in Model.Cart.Items)
                            {
                                <div class="d-flex justify-content-between mb-2">
                                    <div>
                                        <p class="mb-0"><strong>@item.ProductName</strong> x @item.Quantity</p>
                                        @* HIỂN THỊ SIZE Ở ĐÂY *@
                                        <small class="text-muted">Size: @(string.IsNullOrEmpty(item.Size) ? "N/A" : item.Size)</small>
                                    </div>
                                    <p class="mb-0">$@(item.Price * item.Quantity)</p>
                                </div>
                            }
                        }
                        else
                        {
                            <p>Your cart is empty.</p>
                        }
                    </div>

                    <div class="border-bottom pt-3 pb-2">
                        <div class="d-flex justify-content-between mb-3">
                            <h6>Subtotal</h6>
                            <h6>$@Model.Cart.CartTotal</h6>
                        </div>
                        <div class="d-flex justify-content-between">
                            <h6>Shipping</h6>
                            <h6>$@Model.Cart.ShippingCost</h6>
                        </div>
                    </div>

                    <div class="pt-2">
                        <div class="d-flex justify-content-between mt-2">
                            <h5>Total</h5>
                            <h5>$@Model.Cart.Total</h5>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg w-100 mt-3">
                        Place Order
                    </button>
                </div>
            </div>

        </div>
    </div>
</form>
