@model ClothesShop.Models.CheckoutViewModel

<form asp-action="PlaceOrder" asp-controller="Checkout" method="post" id="checkoutForm">
    @Html.AntiForgeryToken()

    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-lg-8">
                <h5 class="section-title position-relative text-uppercase mb-3">
                    <span class="bg-secondary pr-3">Billing Address</span>
                </h5>
                <div class="bg-light p-30 mb-5">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label>First Name</label>
                            <input asp-for="User.FirstName" class="form-control" readonly />
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Last Name</label>
                            <input asp-for="User.LastName" class="form-control" readonly />
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Email</label>
                            <input asp-for="User.Email" class="form-control" readonly />
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Phone</label>
                            <input asp-for="User.PhoneNumber" class="form-control" readonly />
                        </div>

                        <input type="hidden" asp-for="Address.Street" />
                        <input type="hidden" asp-for="Address.Ward" />
                        <input type="hidden" asp-for="Address.District" />
                        <input type="hidden" asp-for="Address.City" />

                        <div class="col-md-12">
                            <p class="mb-0"><strong>Địa chỉ giao hàng:</strong> @Model.Address.Street, @Model.Address.Ward, @Model.Address.District, @Model.Address.City</p>
                            <a href="/Address" class="btn btn-outline-primary btn-sm mt-3">Quản lý sổ địa chỉ</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="bg-light p-30 mb-5">
                    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Order Total</span></h5>
                    <div class="border-bottom pb-2">
                        @foreach (var item in Model.Cart.Items)
                        {
                            <div class="d-flex justify-content-between mb-2">
                                <p>@item.ProductName x @item.Quantity (Size: @item.Size)</p>
                                <p>@(item.Price * item.Quantity)</p>
                            </div>
                        }
                    </div>
                    <div class="pt-2">
                        <div class="d-flex justify-content-between mt-2">
                            <h5>Total</h5>
                            <h5>@Model.Cart.Total.ToString("#,##0")</h5>
                        </div>
                    </div>

                    <h5 class="fw-bold mb-3 mt-4">Phương thức thanh toán</h5>

                    <div class="form-check border p-3 rounded mb-2">
                        <input class="form-check-input" type="radio" name="paymentMethod" id="cod" value="COD" checked>
                        <label class="form-check-label w-100" for="cod">Thanh toán khi nhận hàng (COD)</label>
                    </div>

                    <div class="form-check border p-3 rounded mb-2">
                        <input class="form-check-input" type="radio" name="paymentMethod" id="VNPAY" value="VNPAY">
                        <label class="form-check-label w-100" for="VNPAY">Ví VNPAY</label>
                    </div>

                    <div class="form-check border p-3 rounded mb-3">
                        <input class="form-check-input" type="radio" name="paymentMethod" id="MOMO" value="MOMO">
                        <label class="form-check-label w-100" for="MOMO">Ví MoMo</label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-3 fw-bold">
                        XÁC NHẬN ĐẶT HÀNG
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>