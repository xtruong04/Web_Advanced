@model ClothesShop.Models.CartViewModel

<h2>Giỏ hàng</h2>

<table class="table">
	<thead>
		<tr>
			<th>Hình ảnh</th>
			<th>Tên sản phẩm</th>
			<th>Giá</th>
			<th>Số lượng</th>
			<th>Tổng</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Items)
		{
			<tr>
				<td class="align-middle" style="width: 100px;">
					<div style="width: 80px; height: 80px; overflow: hidden; background-color: #f8f9fa; border: 1px solid #dee2e6; border-radius: 4px;">
						@{
							var imgUrl = item.ProductImage;

							// 1. Kiểm tra nếu ProductImage chứa chuỗi lỗi do truyền List từ View
							if (!string.IsNullOrEmpty(imgUrl) && imgUrl.Contains("System.Collections.Generic.List"))
							{
								// Gán tạm ảnh mặc định, Controller sẽ xử lý lại khi bạn thêm mới sản phẩm
								imgUrl = "/Content/clientpage/assets/img/default.jpg";
							}
							else
							{
								// 2. Chuẩn hóa dấu gạch chéo: đổi \ thành /
								imgUrl = imgUrl?.Replace("\\", "/");

								// 3. Đảm bảo luôn bắt đầu bằng dấu / để trỏ đúng thư mục wwwroot
								if (!string.IsNullOrEmpty(imgUrl) && !imgUrl.StartsWith("/"))
								{
									imgUrl = "/" + imgUrl;
								}
							}

							// Nếu vẫn trống thì dùng ảnh mặc định
							if (string.IsNullOrEmpty(imgUrl)) imgUrl = "/Content/clientpage/assets/img/default.jpg";
						}

						<img src="@imgUrl"
							 alt="@item.ProductName"
							 class="img-fluid"
							 style="width: 100%; height: 100%; object-fit: cover;"
							 onerror="this.onerror=null;this.src='/Content/clientpage/assets/img/default.jpg';" />
					</div>
				</td>
				<td>@item.ProductName</td>
				<td>@item.Price.ToString("C")</td>
				<td>
					<form action="@Url.Action("UpdateQuantity", "Cart")" method="post">
						<input type="number" name="quantity" value="@item.Quantity" min="1" />
						<input type="hidden" name="productId" value="@item.ProductId" />
						<button type="submit" class="btn btn-primary">Cập nhật</button>
					</form>
				</td>
				<td>@item.Total.ToString("C")</td>
				<td>
					<a href="@Url.Action("Remove", "Cart", new { id = item.ProductId })"
					   class="btn btn-danger">
						Xóa
					</a>
				</td>
			</tr>
		}
	</tbody>
</table>

<p>
	Tổng tiền: @Model.CartTotal.ToString("C")
</p>
