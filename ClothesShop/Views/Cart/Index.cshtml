@model ClothesShop.Models.CartViewModel

<h2>Giỏ hàng</h2>

<table class="table">
	<thead>
		<tr>
@* 			<th>Hình ảnh</th>
 *@			<th>Tên sản phẩm</th>
			<th>Giá</th>
			<th>Số lượng</th>
			<th>Tổng</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model.Items)
		{
			<tr>
				@* <td class="align-middle" style="width: 100px;">
					<div style="width: 80px; height: 80px; overflow: hidden; background-color: #f8f9fa;">
						@{
							var imgUrl = item.ProductImage?.Replace("\\", "/");
							if (!string.IsNullOrEmpty(imgUrl) && !imgUrl.StartsWith("/")) imgUrl = "/" + imgUrl;
						}
						<img src="@imgUrl"
							 class="img-fluid"
							 style="width: 100%; height: 100%; object-fit: cover;"
							 onerror="this.onerror=null;this.src='/Content/clientpage/assets/img/default.jpg';" />
					</div>
				</td> *@
				<td>@item.ProductName</td>
				<td>@item.Price.ToString("C")</td>
				<td>
					<form action="@Url.Action("UpdateQuantity", "Cart")" method="post">
						<input type="number" name="quantity" value="@item.Quantity" min="1" />
						<input type="hidden" name="productId" value="@item.ProductId" />
						<button type="submit" class="btn btn-primary">Cập nhật</button>
					</form>
				</td>
				<td>@item.Total.ToString("C")</td>
				<td>
					<a href="@Url.Action("Remove", "Cart", new { id = item.ProductId })"
					   class="btn btn-danger">
						Xóa
					</a>
				</td>
			</tr>
		}
	</tbody>
</table>

<p>
	Tổng tiền: @Model.CartTotal.ToString("C")
</p>
@* <p>
	Phí vận chuyển: @Model.ShippingCost.ToString("C")
</p>
<p>
	Tổng cộng: @Model.Total.ToString("C")
</p> *@

