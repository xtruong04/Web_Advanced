@model IEnumerable<ClothesShop.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    /* Đảm bảo khung chứa ảnh có kích thước cố định */
    .product-img {
        height: 350px; /* Bạn có thể điều chỉnh chiều cao này cho phù hợp */
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f8f9fa; /* Màu nền cho những ảnh nhỏ không lấp đầy khung */
        overflow: hidden;
    }

        /* Ép ảnh lấp đầy khung mà không bị méo (giống object-fit trong điện thoại) */
        .product-img img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Quan trọng: Giữ tỷ lệ ảnh và cắt bớt phần thừa */
            object-position: center;
        }

    /* Đồng nhất độ cao cho phần thân thẻ sản phẩm */
    .product-item {
        display: flex;
        flex-direction: column;
        height: 100%;
    }

        .product-item .text-center {
            flex-grow: 1; /* Đẩy các phần nội dung sao cho các nút hành động luôn thẳng hàng */
        }
</style>
<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark text-decoration-none" asp-action="Index" asp-controller="Home">Home</a>
                <a class="breadcrumb-item text-dark text-decoration-none" asp-action="Index" asp-controller="Shop">Shop</a>
                <span class="breadcrumb-item active">Shop List</span>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<!-- Shop Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <!-- Shop Sidebar Start -->
        <div class="col-lg-3 col-md-4">
            <!-- Price Start -->
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Filter by price</span></h5>
            <div class="bg-light p-4 mb-30">
                <form method="get" asp-controller="Shop" asp-action="Index">
                    <div class="custom-control custom-checkbox mb-2">
                        <input type="radio" name="price" value="" checked class="custom-control-input" id="price-all">
                        <label class="custom-control-label" for="price-all">All Price</label>
                    </div>

                    <div class="custom-control custom-checkbox mb-2">
                        <input type="radio" name="price" value="0-100" class="custom-control-input" id="price-1">
                        <label class="custom-control-label" for="price-1">$0 - $100</label>
                    </div>

                    <div class="custom-control custom-checkbox mb-2">
                        <input type="radio" name="price" value="100-200" class="custom-control-input" id="price-2">
                        <label class="custom-control-label" for="price-2">$100 - $200</label>
                    </div>

                    <button type="submit" class="btn btn-sm btn-primary mt-2">
                        Lọc
                    </button>
                </form>
            </div>
            <!-- Price End -->
            <!-- Color Start -->
            @* <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Filter by color</span></h5>
            <div class="bg-light p-4 mb-30">
                <form method="get" asp-controller="Shop" asp-action="Index">
 
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" name="colors" value="Black" class="custom-control-input" id="color-1">
                        <label class="custom-control-label" for="color-1">Black</label>
                    </div>

                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" name="colors" value="White" class="custom-control-input" id="color-2">
                        <label class="custom-control-label" for="color-2">White</label>
                    </div>

                    <button type="submit" class="btn btn-sm btn-primary mt-2">
                        Lọc
                    </button>
                </form>
            </div> *@
            <!-- Color End -->
            <!-- Size Start -->
            @* <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Filter by size</span></h5>
            <div class="bg-light p-4 mb-30">
                <form method="get" asp-controller="Shop" asp-action="Index">

                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="checkbox" class="custom-control-input" id="size-all">
                        <label class="custom-control-label" for="size-all">All Size</label>
                    </div>

                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="checkbox" class="custom-control-input" name="sizes" value="XS" id="size-1">
                        <label class="custom-control-label" for="size-1">XS</label>
                    </div>

                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="checkbox" class="custom-control-input" name="sizes" value="S" id="size-2">
                        <label class="custom-control-label" for="size-2">S</label>
                    </div>

                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="checkbox" class="custom-control-input" name="sizes" value="M" id="size-3">
                        <label class="custom-control-label" for="size-3">M</label>
                    </div>

                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                        <input type="checkbox" class="custom-control-input" name="sizes" value="L" id="size-4">
                        <label class="custom-control-label" for="size-4">L</label>
                    </div>

                    <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between">
                        <input type="checkbox" class="custom-control-input" name="sizes" value="XL" id="size-5">
                        <label class="custom-control-label" for="size-5">XL</label>
                    </div>

                    <!-- ✅ NÚT LỌC -->
                    <button type="submit" class="btn btn-sm btn-primary mt-2">
                        Lọc
                    </button>
                </form>
            </div> *@
            <!-- Size End -->
        </div>
        <!-- Shop Sidebar End -->
        <!-- Shop Product Start -->
        <div class="col-lg-9 col-md-8">
            <div class="row pb-3">
                <div class="col-12 pb-1">
                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <div>
                            <button class="btn btn-sm btn-light"><i class="fa fa-th-large"></i></button>
                            <button class="btn btn-sm btn-light ml-2"><i class="fa fa-bars"></i></button>
                        </div>
                        <div class="ml-2">
                            <div class="btn-group">
                                <button type="button" class="btn btn-sm btn-light dropdown-toggle" data-toggle="dropdown">Sorting</button>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a class="dropdown-item" href="#">Latest</a>
                                    <a class="dropdown-item" href="#">Popularity</a>
                                    <a class="dropdown-item" href="#">Best Rating</a>
                                </div>
                            </div>
                            <div class="btn-group ml-2">
                                <button type="button" class="btn btn-sm btn-light dropdown-toggle" data-toggle="dropdown">Showing</button>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a class="dropdown-item" href="#">10</a>
                                    <a class="dropdown-item" href="#">20</a>
                                    <a class="dropdown-item" href="#">30</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @foreach (var item in Model)
                {
                    var image = item.ProductImages?.FirstOrDefault()?.ImageUrl
                    ?? "/Content/clientpage/assets/img/no-image.png";

                    <div class="col-lg-4 col-md-6 col-sm-6 mb-4">
                        <div class="product-item bg-light mb-4">
                            <div class="product-img position-relative overflow-hidden">
                                <img class="img-fluid " 
                                     src="@image")"
                                     alt="@item.Name">
                                <div class="product-action">
                                   @*  <a class="btn btn-outline-dark btn-square"
                                       href="javascript:void(0);"
                                       onclick="addToCart(@item.Id, '@item.Name', '@item.ProductImages', @item.Price, 1)">
                                        <i class="fa fa-shopping-cart"></i>
                                    </a> *@
                                    <a class="btn btn-outline-dark btn-square" href=""><i class="far fa-heart"></i></a>
                                    <a class="btn btn-outline-dark btn-square" href=""><i class="fa fa-sync-alt"></i></a>
                                    <a class="btn btn-outline-dark btn-square" href=""><i class="fa fa-search"></i></a>
                                </div>
                            </div>
                            <div class="text-center py-4">
                                <a class="h6 text-decoration-none text-truncate" href="@Url.Action("ShopDetails", "Shop", new { id = item.Id })">@item.Name </a>
                                <div class="d-flex align-items-center justify-content-center mt-2">
                                    <h5>@item.Price.ToString("#,##0") VND</h5>
                                </div>
                                <div class="d-flex align-items-center justify-content-center mb-1">
                                    <small class="fa fa-star text-primary mr-1"></small>
                                    <small class="fa fa-star text-primary mr-1"></small>
                                    <small class="fa fa-star text-primary mr-1"></small>
                                    <small class="fa fa-star text-primary mr-1"></small>
                                    <small class="fa fa-star text-primary mr-1"></small>
                                    <small>99</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <div class="col-12">
                    <nav>
                        @{
                            var prevDisabled = !ViewBag.HasPreviousPage ? "disabled" : "";
                            var nextDisabled = !ViewBag.HasNextPage ? "disabled" : "";
                        }

                        <ul class="pagination justify-content-center">
                            @* Nút Previous *@
                            <li class="page-item @prevDisabled">
                                <a class="page-link" asp-action="Index"
                                   asp-route-pageNumber="@(ViewBag.PageIndex - 1)"
                                   asp-route-price="@ViewData["CurrentPrice"]"
                                   asp-route-cateId="@ViewData["CurrentCate"]">Previous</a>
                            </li>

                            @* Hiển thị số trang *@
                            @for (int i = 1; i <= ViewBag.TotalPages; i++)
                            {
                                <li class="page-item @(i == ViewBag.PageIndex ? "active" : "")">
                                    <a class="page-link" asp-action="Index"
                                       asp-route-pageNumber="@i"
                                       asp-route-price="@ViewData["CurrentPrice"]"
                                       asp-route-cateId="@ViewData["CurrentCate"]">@i</a>
                                </li>
                            }

                            @* Nút Next *@
                            <li class="page-item @nextDisabled">
                                <a class="page-link" asp-action="Index"
                                   asp-route-pageNumber="@(ViewBag.PageIndex + 1)"
                                   asp-route-price="@ViewData["CurrentPrice"]"
                                   asp-route-cateId="@ViewData["CurrentCate"]">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
        <!-- Shop Product End -->
    </div>
</div>
<!-- Shop End -->
<script type="text/javascript">
        function addToCart(id, name, image, price, quantity) {
        $.ajax({
            url: '@Url.Action("Add", "Cart")',
            type: 'POST',
            data: {
                id: id,
                name: name,
                image: image,
                price: price,
                quantity: quantity
            },
            success: function(response) {
                if (response.success) {
                    // Sử dụng Toastr ở đây
                    toastr.success('Đã thêm thành công ' + name + ' vào giỏ hàng!');

                    // Cập nhật số lượng giỏ hàng trên Header nếu có ID
                    $('#cart-count').text(response.cartCount);
                }
            },
            error: function() {
                toastr.error('Có lỗi xảy ra khi thêm vào giỏ hàng.');
            }
        });
    }
</script>

