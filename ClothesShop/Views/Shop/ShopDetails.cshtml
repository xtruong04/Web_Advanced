<script type="text/javascript">
    // 1. Hàm xử lý khi nhấn nút Add To Cart
    function handleAddToCart() {
        var selectedSizeRadio = $("input[name='selectedSize']:checked");

        if (selectedSizeRadio.length === 0) {
            toastr.warning("Vui lòng chọn Size sản phẩm!");
            return;
        }

        var productId = @Model.Id;
        var productName = '@Html.Raw(Model.Name)';
        var productPrice = @Model.Price;
        var productImage = '@(Model.ProductImages?.FirstOrDefault()?.ImageUrl ?? "")';
        var quantity = parseInt($(".quantity input").val());
        var selectedSize = selectedSizeRadio.val();
        var maxInventory = parseInt(selectedSizeRadio.data('inventory'));

        if (quantity > maxInventory) {
            toastr.error("Số lượng vượt quá tồn kho!");
            return;
        }

        $.ajax({
            url: '@Url.Action("Add", "Cart")',
            type: 'POST',
            data: {
                id: productId,
                name: productName,
                image: productImage,
                price: productPrice,
                quantity: quantity,
                size: selectedSize
            },
            success: function(response) {
                if (response.success) {
                    toastr.success("Thêm thành công!");
                    if($("#cart-count").length) $("#cart-count").text(response.cartCount);
                } else {
                    toastr.error(response.message);
                }
            }
        });
    }

    // 2. Hàm xử lý hiển thị số lượng khi chọn Size (Chạy ngay khi load trang)
    $(document).ready(function () {
        $('.size-option').on('change', function () {
            var inventory = $(this).data('inventory');
            var sizeName = $(this).val();

            if (inventory > 0) {
                $('#inventory-display').html("Size " + sizeName + ": Còn <strong>" + inventory + "</strong> sản phẩm");
                $('#inventory-display').attr('class', 'text-primary font-weight-bold');
            } else {
                $('#inventory-display').text("Size " + sizeName + ": Hết hàng");
                $('#inventory-display').attr('class', 'text-danger font-weight-bold');
            }
        });
    });
</script>