@using ClothesShop.Areas.Admin.Models.ViewModel
@model ProductImageVM

@{
    ViewData["Title"] = "Add Product Image";
    Layout = "_Layout"; // Đảm bảo đường dẫn Layout này đúng với các trang khác
}

<div class="container mt-4">
    <div class="card shadow-sm rounded-4 border-0">
        <div class="card-header bg-primary text-white rounded-top-4 py-3">
            <h3 class="fw-bold mb-0"><i class="bi bi-image"></i> Add Product Image</h3>
        </div>

        <div class="card-body p-4">
            <form asp-area="Admin"
                  asp-controller="ProductImages"
                  asp-action="Create"
                  method="post"
                  enctype="multipart/form-data">

                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="ProductId" class="form-label fw-semibold">Select Product</label>
                    <select asp-for="ProductId" class="form-select shadow-sm"
                            asp-items="@(ViewBag.ProductList as SelectList)">
                        <option value="">-- Choose a Product --</option>
                    </select>
                    <span asp-validation-for="ProductId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImageFile" class="form-label fw-semibold">Product Image</label>
                    <input asp-for="ImageFile" type="file" class="form-control shadow-sm"
                           accept="image/*" required />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                    <small class="text-muted">Tip: Square images look best (e.g., 800x800px).</small>
                </div>

                <div class="form-check form-switch mb-4">
                    <input asp-for="IsThumbnail" class="form-check-input" type="checkbox" role="switch" id="isThumb">
                    <label class="form-check-label fw-semibold" for="isThumb">Set as Thumbnail (Main Image)</label>
                    <div class="form-text text-info">
                        <i class="bi bi-info-circle"></i> If checked, other thumbnails for this product will be disabled.
                    </div>
                </div>

                <div class="d-flex gap-2 pt-2 border-top">
                    <button type="submit" class="btn btn-primary px-4 shadow-sm">
                        <i class="bi bi-cloud-arrow-up"></i> Upload Now
                    </button>
                    <a asp-area="Admin" asp-controller="ProductImages" asp-action="Index"
                       class="btn btn-outline-secondary px-4">
                        Cancel
                    </a>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}