@using ClothesShop.Areas.Admin.Models.ViewModel
@model IEnumerable<ProductImageVM>
@{
    ViewData["Title"] = "Product Images";
    Layout = "_Layout";
}

<div class="container mt-4">
    <div class="card shadow-sm rounded-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="fw-bold mb-0">Product Images</h3>
            <a href="/Admin/ProductImages/Create"
               class="btn btn-primary">
                + Add Image
            </a>
        </div>

        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Image</th>
                        <th>Thumbnail</th>
                        <th>Product</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img src="@item.ImageUrl"
                                     alt="Product Image"
                                     style="width:80px;height:auto;border-radius:8px;" />
                            </td>

                            <td>
                                @if (item.IsThumbnail)
                                {
                                    <span class="badge bg-success">Yes</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">No</span>
                                }
                            </td>

                            <td>
                                @item.ProductName
                            </td>

                            <td class="text-end">
                                <a asp-action="Edit"
                                   asp-route-id="@item.Id"
                                   class="btn btn-sm btn-warning">
                                    Edit
                                </a>

                                <a asp-action="Delete"
                                   asp-route-id="@item.Id"
                                   class="btn btn-sm btn-danger ms-1">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Any())
            {
                <div class="text-muted text-center mt-3">
                    No product images found.
                </div>
            }
        </div>
    </div>
</div>
