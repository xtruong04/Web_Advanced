@model ClothesShop.Areas.Admin.Models.ViewModel.ProductViewModel

@{
    ViewData["Title"] = "Product Details";
    Layout = "_Layout"; // Hoặc đường dẫn cụ thể đến layout Admin của bạn
}

<div class="container mt-4">
    <div class="card shadow-sm rounded-4">
        <div class="card-header bg-primary text-white">
            <h3 class="fw-bold mb-0">Product Details</h3>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-8">
                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold text-secondary">Product Name:</div>
                        <div class="col-sm-8 text-dark fs-5">@Model.Name</div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold text-secondary">Price:</div>
                        <div class="col-sm-8 text-danger fw-bold fs-5">
                            @Model.Price?.ToString("C0")
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold text-secondary">Category:</div>
                        <div class="col-sm-8">
                            <span class="badge bg-info text-dark">@ViewBag.CategoryName</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-4 fw-bold text-secondary">Description:</div>
                        <div class="col-sm-8">
                            <div class="p-3 bg-light border rounded">
                                @Model.Description
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4 text-center">
                    <div class="border rounded p-2 bg-light">
                        <p class="text-muted small">Product Image</p>
                        <i class="bi bi-image" style="font-size: 5rem;"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer bg-white text-end py-3">
            <a asp-area="Admin"
               asp-controller="Products"
               asp-action="Edit"
               asp-route-id="@Model.Id"
               class="btn btn-warning px-4 me-2">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-area="Admin"
               asp-controller="Products"
               asp-action="Index"
               class="btn btn-secondary px-4">
                Back to List
            </a>
        </div>
    </div>
</div>