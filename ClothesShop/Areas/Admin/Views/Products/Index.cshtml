@model IEnumerable<ClothesShop.Areas.Admin.Models.ViewModel.ProductViewModel>

@{
    Layout = "_Layout";
}
<div class="container mt-4">
    <div class="card shadow-sm rounded-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="fw-bold">Product List</h3>
            <a href="/Admin/Products/Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Product
            </a>
        </div>

        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Images</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.CategoryName</td>
                            <td>@item.Price?.ToString("C0")</td>
                            <td>@(item.ProductImageIds?.Count ?? 0)</td>

                            <td class="text-end">
                                 <a asp-area="Admin"
                                   asp-controller="Products"
                                   asp-action="Edit"
                                   asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit
                               </a>
                                <a asp-area="Admin"
                                   asp-controller="Products"
                                   asp-action="Details"
                                   asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Details
                               </a>
                                <a asp-area="Admin"
                                   asp-controller="Products"
                                   asp-action="Delete"
                                   asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete
                               </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
