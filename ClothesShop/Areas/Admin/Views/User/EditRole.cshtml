<div class="card shadow p-4 m-4">
    <h3>Cấp quyền cho: @ViewBag.UserName</h3>
    <hr />
    <form asp-action="UpdateRole" method="post">
        <input type="hidden" name="userId" value="@ViewBag.UserId" />

        <div class="mb-3">
            <label class="fw-bold">Chọn vai trò:</label>
            @foreach (var role in ViewBag.AllRoles)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="roles" value="@role"
                    @(ViewBag.UserRoles.Contains(role) ? "checked" : "")>
                    <label class="form-check-label">@role</label>
                </div>
            }
        </div>

        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>