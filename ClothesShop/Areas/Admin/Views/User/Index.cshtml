@model IEnumerable<ClothesShop.Areas.Admin.Models.ViewModel.UserListViewModel>

@{
    Layout = "_Layout";
    ViewData["Title"] = "User Management";
}

<div class="container mt-4">
    <div class="card shadow-sm rounded-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="fw-bold">User List</h3>
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New User
            </a>
        </div>

        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Roles</th> @* Cột mới thêm *@
                        <th>Status</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @{
                                    var fullNameRaw = $"{item.User.FirstName} {item.User.LastName}".Trim();
                                    var displayFullName = string.IsNullOrWhiteSpace(fullNameRaw) ? "Chưa cập nhật" : fullNameRaw;
                                }
                                @if (displayFullName == "Chưa cập nhật")
                                {
                                    <span class="text-muted fst-italic">@displayFullName</span>
                                }
                                else
                                {
                                    <span class="fw-bold text-primary">@displayFullName</span>
                                }
                            </td>

                            <td>@item.User.Email</td>

                            <td>
                                @* Hiển thị danh sách Role dưới dạng Badge *@
                                @if (item.Roles.Any())
                                {
                                    @foreach (var role in item.Roles)
                                    {
                                        var badgeClass = role == "Admin" ? "bg-dark" : (role == "Employee" ? "bg-info" : "bg-secondary");
                                        <span class="badge @badgeClass">@role</span>
                                    }
                                }
                                else
                                {
                                    <span class="badge bg-light text-dark border">No Role</span>
                                }
                            </td>

                            <td>
                                @if (item.User.LockoutEnd != null && item.User.LockoutEnd > DateTime.Now)
                                {
                                    <span class="badge bg-danger">Locked</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                            </td>

                            <td class="text-end">
                                @* Nút Roles màu vàng *@
                                <a asp-area="Admin"
                                   asp-controller="User"
                                   asp-action="EditRole"
                                   asp-route-userId="@item.User.Id"
                                   class="btn btn-sm btn-warning me-1">
                                    <i class="bi bi-shield-lock"></i> Roles
                                </a>

                                @* Nút Khóa/Mở khóa - Sửa lại class Icon *@
                                <form asp-area="Admin"
                                      asp-controller="User"
                                      asp-action="ToggleLock"
                                      asp-route-userId="@item.User.Id"
                                      method="post"
                                      class="d-inline"
                                      onsubmit="return confirm('Bạn chắc chắn muốn thay đổi trạng thái người dùng này?')">

                                    <button type="submit" class="btn btn-sm @(item.User.LockoutEnd > DateTime.Now ? "btn-success" : "btn-danger")">
                                        @if (item.User.LockoutEnd > DateTime.Now)
                                        {
                                            <i class="bi bi-unlock-fill"></i> @* Hiện icon mở khóa nếu đang bị khóa *@
                                        }
                                        else
                                        {
                                            <i class="bi bi-lock-fill"></i> @* Hiện icon khóa nếu đang hoạt động *@
                                        }
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>