@model ClothesShop.Models.Order

@{
    ViewData["Title"] = "Cập nhật đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-warning py-3 text-center">
            <h4 class="mb-0 fw-bold">Cập nhật trạng thái đơn hàng #@Model.Id</h4>
        </div>
        <div class="card-body p-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="UserId" />
                <input type="hidden" asp-for="OrderDate" />
                <input type="hidden" asp-for="TotalAmount" />
                <input type="hidden" asp-for="FullName" />
                <input type="hidden" asp-for="PhoneNumber" />
                <input type="hidden" asp-for="Street" />
                <input type="hidden" asp-for="Ward" />
                <input type="hidden" asp-for="District" />
                <input type="hidden" asp-for="City" />

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Trạng thái vận chuyển</label>
                        <select asp-for="orderStatus" class="form-select shadow-sm"
                                asp-items="Html.GetEnumSelectList<ClothesShop.Models.Order.OrderStatus>()">
                        </select>
                        <span asp-validation-for="orderStatus" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label fw-bold">Trạng thái thanh toán</label>
                        <select asp-for="paymentStatus" class="form-select shadow-sm"
                                asp-items="Html.GetEnumSelectList<ClothesShop.Models.Order.PaymentStatus>()">
                        </select>
                        <span asp-validation-for="paymentStatus" class="text-danger"></span>
                    </div>
                </div>

                <hr />
                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">Hủy bỏ</a>
                    <button type="submit" class="btn btn-primary px-5 fw-bold shadow">Lưu thay đổi</button>
                </div>
            </form>
        </div>
    </div>
</div>