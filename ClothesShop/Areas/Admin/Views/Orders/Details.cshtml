@model ClothesShop.Areas.Admin.Models.ViewModel.OrderViewModel

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 py-4">
    <div class="card shadow rounded-3 border-0">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center py-3">
            <h5 class="mb-0">Đơn hàng #@Model.Id</h5>
            <a asp-action="Index" class="btn btn-sm btn-outline-light">Quay lại danh sách</a>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h6 class="text-muted text-uppercase small fw-bold">Thông tin khách hàng</h6>
                    <p class="mb-1"><strong>Họ tên:</strong> @Model.FullName</p>
                    <p class="mb-1"><strong>Điện thoại:</strong> @Model.PhoneNumber</p>
                    <p class="mb-1"><strong>Ngày đặt:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
                </div>
                <div class="col-md-6">
                    <h6 class="text-muted text-uppercase small fw-bold">Địa chỉ giao hàng</h6>
                    <p class="mb-0">@Model.ShippingAddress</p>
                </div>
            </div>

            <div class="row mb-4 text-center">
                <div class="col-md-6">
                    <div class="p-3 bg-light rounded shadow-sm">
                        <small class="d-block text-muted">Vận chuyển</small>
                        <span class="badge bg-primary fs-6">@Model.OrderStatus</span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="p-3 bg-light rounded shadow-sm">
                        <small class="d-block text-muted">Thanh toán</small>
                        <span class="badge @(Model.PaymentStatus == "Paid" ? "bg-success" : "bg-danger") fs-6">@Model.PaymentStatus</span>
                    </div>
                </div>
            </div>

            <h6 class="text-muted text-uppercase small fw-bold mb-3">Sản phẩm đã đặt</h6>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>Tên sản phẩm</th>
                            <th class="text-center">Số lượng</th>
                            <th class="text-end">Đơn giá</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.OrderItems)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td class="text-center">@item.Quantity</td>
                                <td class="text-end">@item.PriceAtPurchase.ToString("N0") đ</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="2" class="text-end fw-bold">Tổng cộng:</td>
                            <td class="text-end fw-bold text-danger fs-5">@Model.TotalAmount.ToString("N0") đ</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
        <div class="card-footer bg-white py-3">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning px-4">Chỉnh sửa trạng thái</a>
        </div>
    </div>
</div>