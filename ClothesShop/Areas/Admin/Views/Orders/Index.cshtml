@using ClothesShop.Areas.Admin.Models.ViewModel
@model IEnumerable<OrderViewModel>

@{
    ViewData["Title"] = "Quản lý đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="card shadow-sm rounded-4">
        <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h3 class="fw-bold mb-0 text-primary">Danh sách Đơn hàng</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Khách hàng</th>
                            <th>Ngày đặt</th>
                            <th>Tổng tiền</th>
                            <th>Trạng thái đơn</th>
                            <th>Thanh toán</th>
                            <th class="text-end">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="fw-bold">@item.FullName</div>
                                    <small class="text-muted">@item.PhoneNumber</small>
                                </td>
                                <td>@item.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="fw-bold text-danger">@item.TotalAmount.ToString("C0")</td>
                                <td>
                                    <span class="badge @(item.OrderStatus == "Cancelled" ? "bg-danger" : "bg-info")">
                                        @item.OrderStatus
                                    </span>
                                </td>
                                <td>
                                    <span class="badge @(item.PaymentStatus == "Approved" ? "bg-success" : "bg-warning text-dark")">
                                        @item.PaymentStatus
                                    </span>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye"></i> Chi tiết
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">
                                            <i class="bi bi-pencil"></i> Sửa
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>