@model ClothesShop.Areas.Admin.Models.ViewModel.DashboardViewModel
@{
    Layout = "_Layout";
}

<div class="container">
    <div class="page-inner">

        <!-- Cards -->
        <div class="row">
            <div class="col-md-3">
                <div class="card card-stats card-round">
                    <div class="card-body">
                        <p class="card-category">Total Orders</p>
                        <h4 class="card-title">@Model.TotalOrders</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card card-stats card-round">
                    <div class="card-body">
                        <p class="card-category">Total Sales</p>
                        <h4 class="card-title">@Model.TotalSales.ToString("#,##0") VNĐ</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card card-stats card-round">
                    <div class="card-body">
                        <p class="card-category">Products</p>
                        <h4 class="card-title">@Model.TotalProducts</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card card-stats card-round">
                    <div class="card-body">
                        <p class="card-category">Customers</p>
                        <h4 class="card-title">@Model.TotalCustomers</h4>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Orders Table -->
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card card-round">
                    <div class="card-header">
                        <div class="card-title">Recent Orders</div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Order #</th>
                                        <th>Product</th>
@*                                         <th>Product Image</th>
 *@                                        <th>Quantity</th>
                                        <th>Price</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.RecentOrders)
                                    {
                                        if (order.OrderItems != null)
                                        {
                                            foreach (var item in order.OrderItems)
                                            {
                                                <tr>
                                                    <td>@order.Id</td>
                                                    <td>@item.Product.Name</td>
                                                   @*  <td>
                                                        <img src="~/Content/products/@item.Product.ProductImages" width="50" />
                                                    </td> *@
                                                    <td>@item.Quantity</td>
                                                    <td>@item.PriceAtPurchase.ToString("#,##0") VNĐ</td>
                                                    <td>
                                                        <span class="badge @(order.orderStatus == ClothesShop.Models.Order.OrderStatus.Delivered ? "badge-success" : "badge-warning")">
                                                            @order.orderStatus
                                                        </span>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Orders Chart -->
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card card-round">
                    <div class="card-header">
                        <div class="card-title">Orders Chart (Last 7 Days)</div>
                    </div>
                    <div class="card-body">
                        <canvas id="ordersChart" height="100"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Sales Chart -->
        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card card-round">
                    <div class="card-header">
                        <div class="card-title">Total Sales (Last 7 Days)</div>
                    </div>
                    <div class="card-body">
                        <canvas id="salesChart" height="100"></canvas>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('ordersChart').getContext('2d');

        var labels = [
        @for (int i = 6; i >= 0; i--)
        {
            @: "@(DateTime.Now.AddDays(-i).ToString("MM/dd"))",
        }
        ];

        var data = [
        @for (int i = 6; i >= 0; i--)
        {
            @: @Model.RecentOrders.Count(o => o.OrderDate.Date == DateTime.Now.AddDays(-i).Date),
        }
        ];

        new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [{
                    label: 'Orders',
                    data: data,
                    borderColor: '#177dff',
                    backgroundColor: 'rgba(23, 125, 255, 0.2)',
                    fill: true,
                    tension: 0.3
                }]
            },
            options: {
                responsive: true,
                plugins: { legend: { display: false } }
            }
        });
    </script>
    <script>
                var ctx2 = document.getElementById('salesChart').getContext('2d');

        var salesData = [
        @for (int i = 6; i >= 0; i--)
        {
            var day = DateTime.Now.AddDays(-i).Date;
            var totalSales = Model.RecentOrders
                .Where(o => o.OrderDate.Date == day)
                .SelectMany(o => o.OrderItems)
                .Sum(x => x.PriceAtPurchase * x.Quantity);

            @: @totalSales,
        }
        ];

        new Chart(ctx2, {
            type: 'line',
            data: {
                labels: labels, // dùng chung labels với chart Orders
                datasets: [{
                    label: 'Total Sales ($)',
                    data: salesData,
                    borderColor: '#f3545d',
                    backgroundColor: 'rgba(243, 84, 93, 0.2)',
                    fill: true,
                    tension: 0.3
                }]
            },
            options: {
                responsive: true,
                plugins: { legend: { display: false } }
            }
        });

    </script>
}