                    <div class="col-sm-9">
                        <span class="badge bg-dark">@Model.ProductCount sản phẩm</span>
                    </div>
                </div>
            } *@
        </div>

        <div class="card-footer bg-light text-end">
            <a asp-area="Admin"
               asp-controller="Categories"
               asp-action="Index"
               class="btn btn-secondary px-4">
                Back to List
            </a>
        </div>
    </div>
</div>