@model IEnumerable<ClothesShop.Areas.Admin.Models.ViewModel.CategoryViewModel>

@{
    ViewData["Title"] = "Categories";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-sm rounded-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="fw-bold mb-0">Categories</h3>
            <a href="/Admin/Categories/Create" class="btn btn-primary">
                + Create Category
            </a>
        </div>

        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info mb-0">
                    No categories found.
                </div>
            }
            else
            {
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th style="width: 25%">Name</th>
                            <th>Description</th>
                            <th style="width: 20%" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-semibold">
                                    @item.Name
                                </td>
                                <td>
                                    @item.Description
                                </td>
                                <td class="text-end">
                                    <a asp-area="Admin"
                                       asp-controller="Categories"
                                       asp-action="Edit"
                                       asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                        Edit
                                    </a>
                                    <a asp-area="Admin"
                                       asp-controller="Categories"
                                       asp-action="Details"
                                       asp-route-id="@item.Id" class="btn btn-sm btn-secondary">
                                        Details
                                    </a>
                                    <a asp-area="Admin"
                                       asp-controller="Categories"
                                       asp-action="Delete"
                                       asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
