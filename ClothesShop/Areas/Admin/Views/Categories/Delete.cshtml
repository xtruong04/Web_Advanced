@model ClothesShop.Areas.Admin.Models.ViewModel.CategoryViewModel


@{
    ViewData["Title"] = "Delete Category";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card border-danger shadow-sm rounded-4">
        <div class="card-header bg-danger text-white">
            <h3 class="fw-bold mb-0"><i class="bi bi-exclamation-triangle"></i> Delete Category</h3>
        </div>

        <div class="card-body">
            <h4 class="text-danger fw-bold">Are you sure you want to delete this?</h4>
            <p class="text-muted">Deleting this category may affect products linked to it.</p>
            <hr />

            <dl class="row">
                <dt class="col-sm-3 text-secondary">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9 fw-bold">
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt class="col-sm-3 text-secondary">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-9">
                    <div class="p-2 bg-light border rounded">
                        @Html.DisplayFor(model => model.Description)
                    </div>
                </dd>
            </dl>
        </div>

        <div class="card-footer bg-white py-3">
            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <button type="submit" class="btn btn-danger px-4 me-2">
                    <i class="bi bi-trash"></i> Confirm Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary px-4">
                    Cancel
                </a>
            </form>
        </div>
    </div>
</div>