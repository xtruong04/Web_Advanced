@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Đặt lại mật khẩu";
}

<div class="card shadow-lg border-0 rounded-4">
    <div class="card-body p-4">
        <h3 class="text-center mb-2 fw-bold">@ViewData["Title"]</h3>
        <p class="text-center text-muted mb-4">Thiết lập mật khẩu mới cho tài khoản của bạn</p>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            
            @* Hidden input quan trọng để Identity nhận diện token *@
            <div class="form-floating mb-3">
                <input asp-for="Input.OTP" class="form-control fw-bold" autocomplete="off" placeholder="Nhập mã 6 số" />
                <label asp-for="Input.OTP">Mã xác nhận OTP</label>
                <span asp-validation-for="Input.OTP" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" readonly />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="••••••" />
                <label asp-for="Input.Password">Mật khẩu mới</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" placeholder="••••••" />
                <label asp-for="Input.ConfirmPassword">Xác nhận mật khẩu</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2 fw-bold rounded-3">
                Cập nhật mật khẩu
            </button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}