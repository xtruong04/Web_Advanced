@page
@model LoginModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "/Views/Shared/_Layout.cshtml"; // dùng layout chính của website
}

<!-- ================= TEMPLATE CSS (ColoShop Template) =================== -->
<link rel="stylesheet" href="~/assets/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/assets/css/font-awesome.min.css" />
<link rel="stylesheet" href="~/assets/css/themify-icons.css" />
<link rel="stylesheet" href="~/assets/css/elegant-icons.css" />
<link rel="stylesheet" href="~/assets/css/owl.carousel.min.css" />
<link rel="stylesheet" href="~/assets/css/nice-select.css" />
<link rel="stylesheet" href="~/assets/css/jquery-ui.min.css" />
<link rel="stylesheet" href="~/assets/css/slicknav.min.css" />
<link rel="stylesheet" href="~/assets/css/style.css" />

<!-- =============== CUSTOM LOGIN PAGE CSS =============== -->
<link rel="stylesheet" href="~/css/auth.css" />

<div class="auth-wrapper">
    <div class="auth-container">
        <div class="auth-box">

            <h2 class="auth-title">Đăng nhập</h2>
            <p class="auth-subtitle">Chào mừng bạn quay lại</p>

            <form method="post" class="auth-form">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label>Email</label>
                    <input asp-for="Input.Email" class="form-control auth-input" placeholder="Nhập email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label>Mật khẩu</label>
                    <input asp-for="Input.Password" class="form-control auth-input" placeholder="Mật khẩu" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <label class="checkbox-label">
                        <input asp-for="Input.RememberMe" />
                        Ghi nhớ đăng nhập
                    </label>

                    <a asp-page="./ForgotPassword" class="auth-link">Quên mật khẩu?</a>
                </div>

                <button type="submit" class="btn auth-btn w-100">Đăng nhập</button>

                <div class="auth-divider">
                    <span>Hoặc</span>
                </div>

                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn auth-btn-outline w-100">
                    Tạo tài khoản mới
                </a>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
