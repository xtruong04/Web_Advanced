@page
@model LoginModel

@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="card shadow-lg border-0 rounded-4">
    <div class="card-body p-4">

        <h3 class="text-center mb-2 fw-bold">@ViewData["Title"]</h3>
        <p class="text-center text-muted mb-4">Chào mừng bạn quay lại</p>

        <form method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" placeholder="email@example.com" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="••••••" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <label class="d-flex align-items-center gap-2">
                    <input asp-for="Input.RememberMe" />
                    <span>Ghi nhớ đăng nhập</span>
                </label>

                <a asp-page="./ForgotPassword" class="text-decoration-none small">Quên mật khẩu?</a>
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2 fw-bold rounded-3">
                Đăng nhập
            </button>
        </form>

        <div class="text-center mt-4">
            <p class="text-muted">Hoặc</p>
            <a asp-page="./Register"
               asp-route-returnUrl="@Model.ReturnUrl"
               class="btn btn-outline-primary w-100 py-2 rounded-3 fw-semibold">
                Tạo tài khoản mới
            </a>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
