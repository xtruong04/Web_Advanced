@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="card shadow-lg border-0 rounded-4">
    <div class="card-body p-4">
        <h3 class="text-center mb-2 fw-bold">@ViewData["Title"]</h3>
        <p class="text-center text-muted mb-4">Nhập email của bạn để nhận hướng dẫn khôi phục</p>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-floating mb-4">
                <input asp-for="Input.Email" class="form-control" placeholder="email@example.com" aria-required="true" />
                <label asp-for="Input.Email">Địa chỉ Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2 fw-bold rounded-3">
                Gửi yêu cầu
            </button>
        </form>

        <div class="text-center mt-4">
            <a asp-page="./Login" class="text-decoration-none small">
                <i class="bi bi-arrow-left"></i> Quay lại đăng nhập
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}